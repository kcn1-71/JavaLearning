
public class ShellSort {

	public static void ShellsSort(int[] Arr) {
		int N = Arr.length / 2;
		for (int k = N / 2; k > 0; k /= 2) {
			for (int i = k; i < N; i += 1) {
				int t = Arr[i];
				int j;
				for (j = i; j >= k; j -= k) {
					if (t < Arr[j - k])
						Arr[j] = Arr[j - k];
					else
						break;
				}
				Arr[j] = t;
			}
		}
	}

	public static void main(String[] args) {
		int[] A = new int[] { 2, 4, 1, 5, 3, 7, 9, 34, 3, 7, 8, 5, 4, 3, 9, 9, 6, 6 };
		ShellsSort(A);

	}

}
